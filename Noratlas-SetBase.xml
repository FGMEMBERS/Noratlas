<PropertyList>

 <sim>

    <systems>
        <autopilot>
                <path>Aircraft/Noratlas/System/autopilot.xml</path>
        </autopilot>
    </systems>

    <sound>
        <path>Aircraft/Noratlas/Sounds/sound.xml</path>
    </sound>



  <view>
    <internal archive="y">true</internal>
    <config>
        <!-- x/y/z == right/up/back -->
        <x-offset-m archive="y">-0.474958</x-offset-m>
        <y-offset-m archive="y">0.90</y-offset-m>
        <z-offset-m archive="y">-6.09852</z-offset-m>
        <pitch-offset-deg archive="y">-16.0</pitch-offset-deg>
        <default-field-of-view-deg type="double">72.0</default-field-of-view-deg>
    </config>
  </view>

    <current-view>
            <field-of-view type="double">72.0</field-of-view>
    </current-view>


  <chase-distance-m>-40</chase-distance-m>




    <hud>
        <enable3d>true</enable3d>
    </hud>

    <flaps>
        <setting>0.00</setting>
        <setting>0.25</setting>
        <setting>0.50</setting>
        <setting>0.75</setting>
        <setting>1</setting>
    </flaps>



 </sim>

    <engines>
        <engine n="0">
                <rpm type="double">0</rpm>
        </engine>
        <engine n="1">
                <rpm type="double">0</rpm>
        </engine>
        <engine n="2">
                <running>false</running>
        </engine>
        <engine n="3">
                <running>false</running>
        </engine>
    </engines>


    <ai>
        <submodels>
            <trigger type="bool">false</trigger>
        </submodels>
    </ai>

    <controls>
    <gear>
            <brake-parking type="double">1</brake-parking>
        </gear>
        <engines>
            <engine n="0">
                    <magnetos>0</magnetos>
                    <throttle type="double">0</throttle>
                    <master-bat>false</master-bat>
            </engine>
            <engine n="1">
                    <magnetos>0</magnetos>
                    <throttle type="double">0</throttle>
                    <master-bat>false</master-bat>
            </engine>
            <engine n="2">
                <fuel-pump>false</fuel-pump>
                <cutoff-cmd>true</cutoff-cmd>
                <master-bat>false</master-bat>
            </engine>
            <engine n="3">
                <fuel-pump>false</fuel-pump>
                <cutoff-cmd>true</cutoff-cmd>
                 <master-bat>false</master-bat>
            </engine>
	    <engine n="4">
                <throttle type="double">0</throttle>
            </engine>
        </engines>
        <switches>
            <landing-light>true</landing-light>
            <master-avionics>false</master-avionics>
        </switches>

        <lighting>
            <instruments-norm type="double">0.0</instruments-norm>
        </lighting>

        <electric>
            <master-switch>false</master-switch>
            <battery-switch>false</battery-switch>
            <external-power>false</external-power>
        </electric>
    </controls>



    <input include="Inputs/Nord-input.xml"/>


     <fdm><jsbsim><fcs>
        <lighting-instruments-norm>0</lighting-instruments-norm>
    </fcs></jsbsim></fdm>

    <nasal>
                <electrical>
                        <file>Aircraft/Noratlas/System/electrical.nas</file>
                </electrical>
                <switch>
                        <file>Aircraft/Noratlas/System/noratlas.nas</file>
                </switch>
		<terrain>
			<file>Aircraft/F-8E-Crusader/System/terrain.nas</file>
		</terrain>
    </nasal>


</PropertyList>
