<PropertyList>

 <path>Models/ctrl_oil_fuel-nord.ac</path>
 <texture-path>Models/Textures</texture-path>

        <animation>
                <type>noshadow</type>
                <object-name>CTRLOF</object-name>
        </animation>





        <animation include="Instrument-Light4.xml">
                <object-name>AiguilleOilTemp</object-name>
        </animation>

        <animation include="Instrument-Light4.xml">
                <object-name>AiguilleOilPress</object-name>
        </animation>

        <animation include="Instrument-Light4.xml">
                <object-name>AiguilleFuel</object-name>
        </animation>

        <animation include="Instrument-Light3.xml">
                <object-name>Cadran1</object-name>
                <object-name>Cadran2</object-name>
                <object-name>Cadran3</object-name>
        </animation>

        <animation>
                <type>rotate</type>
                <object-name>AiguilleOilTemp</object-name>
                <property>/engines/engine[0]/oil-temperature-degf</property>
                <min>-70</min>
                <max>150</max>
                <interpolation>
                        <entry>
                        <ind>-58</ind>
                        <dep>8</dep>
                        </entry>
                        <entry>
                        <ind>302</ind>
                        <dep>118</dep>
                        </entry>
                </interpolation>
                <center>
                        <x-m>0</x-m>
                        <y-m>0</y-m>
                        <z-m>0.00650974</z-m>
                </center>
                <axis>
                        <x>-1</x>
                        <y>0</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>rotate</type>
                <object-name>AiguilleOilPress</object-name>
                <property>/engines/engine[0]/oil-pressure-psi</property>
                <min>0</min>
                <max>200</max>
                <interpolation>
                        <entry>
                        <ind>0</ind>
                        <dep>0</dep>
                        </entry>
                        <entry>
                        <ind>200</ind>
                        <dep>180</dep>
                        </entry>
                </interpolation>
                <center>
                        <x-m>0</x-m>
                        <y-m>-0.00868904</y-m>
                        <z-m>-0.0120114</z-m>
                </center>
                <axis>
                        <x>-1</x>
                        <y>0</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>rotate</type>
                <object-name>AiguilleFuel</object-name>
                <property>/engines/engine/fuel-flow-gph</property><!--fake  ONLY to animate the needle should be /engines/engine/fuel-pump-psi-->
                <interpolation>
                        <entry>
                        <ind>0</ind>
                        <dep>0</dep>
                        </entry>
                        <entry>
                        <ind>300</ind>
                        <dep>180</dep>
                        </entry>
                </interpolation>
                <center>
                        <x-m>0</x-m>
                        <y-m>0.00868904</y-m>
                        <z-m>-0.0120114</z-m>
                </center>
                <axis>
                        <x>1</x>
                        <y>0</y>
                        <z>0</z>
                </axis>
        </animation>



</PropertyList>