<PropertyList>

 <path>Models/ignition-nord.ac</path>
 <texture-path>Models/Textures</texture-path>

 	<animation>
		<type>noshadow</type>
		<object-name>IGNITION</object-name>
	</animation>

	<animation include="Instrument-Light3.xml">
		<object-name>Cadran</object-name>
	</animation>

	<animation include="Instrument-Light3.xml">
		<object-name>Inter</object-name>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Inter</object-name>
		<property>/controls/engines/engine[0]/magnetos</property>
		<interpolation>
			<entry>
			<ind>0</ind>
			<dep>0</dep>
			</entry>
			<entry>
			<ind>1</ind>
			<dep>40</dep>
			</entry>
			<entry>
			<ind>2</ind>
			<dep>80</dep>
			</entry>
			<entry>
			<ind>3</ind>
			<dep>120</dep>
			</entry>
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Inter</object-name>
		<property>/controls/engines/engine[0]/starter</property>
		<factor>40</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>


</PropertyList>