<PropertyList>

 <path>Models/n1-nord.ac</path>
 <texture-path>Models/Textures</texture-path>

 	<animation>
		<type>noshadow</type>
		<object-name>N1</object-name>
	</animation>


	<animation include="Instrument-Light4.xml">
		<object-name>Aiguille</object-name>
		<object-name>Aiguille_pt</object-name>
	</animation>

	<animation include="Instrument-Light3.xml">
		<object-name>Cadran</object-name>
		<object-name>Cadran_pt</object-name>
	</animation>


	<animation>
		<type>rotate</type>
		<object-name>Aiguille</object-name>
		<property>/engines/engine[3]/n1</property>
		<factor>2.64706</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Aiguille_pt</object-name>
		<property>/engines/engine[3]/n1</property>
		<factor>36</factor>
		<center>
			<x-m>0</x-m>
			<y-m>-0.0144286</y-m>
			<z-m>0.0167138</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

</PropertyList>