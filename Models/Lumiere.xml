<PropertyList>

 <path>lumiere.ac</path>
 <texture-path>Textures/texture-noratlas/</texture-path>

	<animation>
            <type>select</type>
           <object-name>phare-faisceau-tache</object-name>
            <condition>
                <less-than>
                    <property>position/altitude-agl-ft</property>
                    <value>10</value>
                </less-than>
            </condition>
        </animation>

        <animation>
            <type>noshadow</type>
            <object-name>phare-faisceau-tache</object-name>
        </animation>

        <animation>
            <type>noshadow</type>
            <object-name>phare</object-name>
        </animation>

        <animation>
            <type>noshadow</type>
            <object-name>phare-faisceau</object-name>
        </animation>

        <animation>
            <type>flash</type>
            <object-name>phare-faisceau-tache</object-name>
            <center>
                <x-m>15.0275</x-m>
                <y-m>0</y-m>
                <z-m>-0</z-m>
            </center>
            <axis>
                <x>-1</x>
                <y>0</y>
                <z>-0.15</z>
            </axis>
            <power>5</power>
            <factor>1</factor>
            <offset>0</offset>
            <two-sides type="bool">false</two-sides>
            <min>0.7</min>
            <max>1</max>
        </animation>

        <animation>
            <type>flash</type>
            <object-name>phare</object-name>
            <center>
                <x-m>15.0275</x-m>
                <y-m>0</y-m>
                <z-m>-0</z-m>
            </center>
            <axis>
                <x>-1</x>
                <y>0</y>
                <z>-0.15</z>
            </axis>
            <power>5</power>
            <factor>1</factor>
            <offset>0</offset>
            <two-sides type="bool">false</two-sides>
            <min>0.01</min>
            <max>1</max>
        </animation>

        <animation>
            <type>flash</type>
            <object-name>phare-faisceau</object-name>
            <center>
                <x-m>15.0275</x-m>
                <y-m>0</y-m>
                <z-m>-0</z-m>
            </center>
            <axis>
                <x>-1</x>
                <y>0</y>
                <z>-0.15</z>
            </axis>
            <power>10</power>
            <factor>1</factor>
            <offset>0</offset>
            <two-sides type="bool">false</two-sides>
            <min>0.7</min>
            <max>1</max>
        </animation>

</PropertyList>
